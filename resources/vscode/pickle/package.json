{
    "name": "pickle",
    "displayName": "pickle",
    "description": "Pickle",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.29.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "workspaceContains:toxic/**/*.test",
        "workspaceContains:toxic/**/*.fn",
        "workspaceContains:toxic/**/*.dep"
    ],
    "main": "./out/extension",
    "contributes": {
        "snippets": [
            {
                "language": "groovy",
                "path": "./snippets/pickle.json"
            }
        ],
        "commands": [
            {
                "title": "Locate",
                "command": "pickleExplorer.openFile",
                "icon": "resources/edit.svg",
                "category": "Pickle"
            },
            {
                "title": "Run Test",
                "command": "pickleExplorer.runTest",
                "icon": "resources/run.svg"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "pickle-explorer",
                    "title": "Pickle Explorer",
                    "icon": "resources/pickle-icon.png"
                }
            ]
        },
        "menus": {
            "view/item/context": [
                {
                    "command": "pickleExplorer.runTest",
                    "when": "viewItem == pickle-runnable",
                    "group": "inline"
                },
                {
                    "command": "pickleExplorer.openFile",
                    "when": "viewItem != pickle-item-container",
                    "group": "inline"
                }
            ],
            "commandPalette": [
                {
                    "command": "pickleExplorer.openFile",
                    "when": "false"
                },
                {
                    "command": "pickleExplorer.runTest",
                    "when": "false"
                }
            ]
        },
        "views": {
            "pickle-explorer": [
                {
                    "id": "pickle-deps",
                    "name": "Dependencies",
                    "when": "hasPickleItems"
                },
                {
                    "id": "pickle-functions",
                    "name": "Functions",
                    "when": "hasPickleItems"
                },
                {
                    "id": "pickle-tests",
                    "name": "Tests",
                    "when": "hasPickleItems"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    }
}