{
    "name": "pickle",
    "displayName": "pickle",
    "description": "Pickle",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.29.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "workspaceContains:toxic/**/*.test",
        "workspaceContains:toxic/**/*.fn",
        "workspaceContains:toxic/**/*.dep"
    ],
    "main": "./out/extension",
    "contributes": {
        "snippets": [
            {
                "language": "groovy",
                "path": "./snippets/pickle.json"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Pickle configuration",
            "properties": {
                "pickle.runtimeArgs": {
                    "type": "array",
                    "description": "List of runtime arguments in the format: -key=value"
                },
                "pickle.notifications.success": {
                    "type": "boolean",
                    "description": "Enable notifications for successful tests",
                    "default": true
                },
                "pickle.notifications.failure": {
                    "type": "boolean",
                    "description": "Enable notifications for failed tests",
                    "default": true
                }
            }
        },
        "commands": [
            {
                "title": "Locate",
                "command": "pickleExplorer.openFile",
                "icon": "resources/edit.svg"
            },
            {
                "title": "Run Test",
                "command": "pickleExplorer.runTest",
                "icon": "resources/run.svg"
            },
            {
                "title": "Run All",
                "command": "pickleExplorer.runAll",
                "icon": "resources/stack.svg"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "pickle-explorer",
                    "title": "Pickle Explorer",
                    "icon": "resources/pickle-icon.png"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "pickleExplorer.runAll",
                    "when": "view == pickle-tests",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "pickleExplorer.runTest",
                    "when": "viewItem == pickle-runnable",
                    "group": "inline"
                }
            ],
            "commandPalette": [
                {
                    "command": "pickleExplorer.openFile",
                    "when": "false"
                },
                {
                    "command": "pickleExplorer.runTest",
                    "when": "false"
                },
                {
                    "command": "pickleExplorer.runAll",
                    "when": "false"
                }
            ]
        },
        "views": {
            "pickle-explorer": [
                {
                    "id": "pickle-deps",
                    "name": "Dependencies",
                    "when": "activated"
                },
                {
                    "id": "pickle-functions",
                    "name": "Functions",
                    "when": "activated"
                },
                {
                    "id": "pickle-tests",
                    "name": "Tests",
                    "when": "activated"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "clean": "rm -fr ./node_modules && rm -fr ./out",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "vscode": "^1.1.22"
    }
}
